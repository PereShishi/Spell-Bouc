<UserControl x:Class="SpellBouc.View.WizardSpellItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpellBouc.View"
             mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" >

        <TextBox Text="10" Grid.Column="0" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" Margin="0,0,5,0"></TextBox >
        <Button Content=" + " Grid.Column="1" Margin="0,0,0,0"></Button>
        <Button Content=" - " Grid.Column="2" Margin="0,0,5,0"></Button>
        <TextBox Text="Acpertion d'acide" Grid.Column="3" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" Margin="0,0,5,0"></TextBox >
        <TextBox Text="Invocation" Grid.Column="3" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" Margin="0,0,5,0" ></TextBox >
    </StackPanel>
</UserControl>
